<div class="jumbotron text-center">
    <h1>My Favourites</h1>

    <p ng-show="!signedIn">Please <a href="#my_favourites" ng-click="signIn()">Sign In</a> </p>

    <div ng-show="signedIn" ng-controller="my_favourites_view_controller as list">
        <table align="center" valign="middle">
            <tbody  ng-repeat="favourite in favourites">
            <tr style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle"; >
            <td>
                <span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle";><img class="img-circle img_coffee_list img-responsive" src="{{favourite.coffee.user_img_url}}"/></span>
            </td>

            <td>
                <span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle";>{{favourite.coffee.user_name}}</span>
            </td>

            <td>
                <span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle";>{{favourite.coffee.name}}</span>
            </td>
            <td>
                <span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle";>{{favourite.coffee.coffee_shop}}</span>
            </td>
            <td>
                <span class="glyphicon glyphicon-euro"></span>
                {{favourite.coffee.price}}
            </td>

            <td >
                <span ng-repeat="starStyle in getStarStyles(favourite.coffee.stars) track by $index" class="{{starStyle}}"></span>


            </td>

            </tr>
            </tbody>
        </table>
    </div>
